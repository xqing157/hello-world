<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.alibaba.rulecases.java.SQLInjection.SQLInjection57.UserInfoDAO">
  <resultMap id="BaseResultMap" type="com.alibaba.rulecases.java.SQLInjection.SQLInjection57.UserInfoDO">
    <id column="id" jdbcType="BIGINT" property="id" />
    <result column="gmt_create" jdbcType="TIMESTAMP" property="gmtCreate" />
    <result column="name" jdbcType="VARCHAR" property="name" />
  </resultMap>
  <select id="query"
		parameterType="com.alibaba.rulecases.java.SQLInjection.SQLInjection57.UserInfoQuery"
		resultMap="BaseResultMap">
		select id,gmt_create,name from user_info
		<where>
			<if test="id != null">
				id = #{id}
			</if>
			<if test="name != null and name != ''">
		  		and name = #{name}
			</if>
		</where>
		<if test="orderBy != null">
			 order by ${orderBy}
		</if>
	</select>
</mapper>